{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Path mapping for monorepo */
    "paths": {
      "@dag-viz/types": ["./packages/types/src"],
      "@dag-viz/types/*": ["./packages/types/src/*"],
      "@dag-viz/core": ["./packages/core/src"],
      "@dag-viz/core/*": ["./packages/core/src/*"],
      "@dag-viz/physics": ["./packages/physics/src"],
      "@dag-viz/physics/*": ["./packages/physics/src/*"],
      "@dag-viz/renderer": ["./packages/renderer/src"],
      "@dag-viz/renderer/*": ["./packages/renderer/src/*"],
      "@dag-viz/text-analysis": ["./packages/text-analysis/src"],
      "@dag-viz/text-analysis/*": ["./packages/text-analysis/src/*"],
      "@dag-viz/utils": ["./packages/utils/src"],
      "@dag-viz/utils/*": ["./packages/utils/src/*"]
    }
  }
}
